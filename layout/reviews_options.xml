<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="800dp"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ReviewsOptions">>

    <ImageView
        android:id="@+id/wallpaper"
        android:layout_width="907dp"
        android:layout_height="1359dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ipad_restaurant_app_background_2" />


    <ImageView
        android:id="@+id/borderB"
        android:layout_width="631dp"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="652dp"
        android:background="#fcc200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SeeReviewsButton"
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:layout_marginTop="652dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:text="See Reviews"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:background="#191919"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#170B0B" />


    <ImageView
        android:id="@+id/borderA"
        android:layout_width="631dp"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="504dp"
        android:background="#fcc200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/RateRestaurantButton"
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:layout_marginTop="504dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:text="Leave a review"
        android:background="#191919"
        android:textColor="#ffffff"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#170B0B" />


    <ImageView
        android:id="@+id/borderC"
        android:layout_width="110dp"
        android:layout_height="84dp"
        android:layout_marginTop="832dp"
        android:background="#191919"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/home"
        android:layout_width="86dp"
        android:layout_height="85dp"
        android:layout_marginTop="832dp"
        android:layout_marginEnd="356dp"
        android:layout_marginRight="356dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home" />


</androidx.constraintlayout.widget.ConstraintLayout>